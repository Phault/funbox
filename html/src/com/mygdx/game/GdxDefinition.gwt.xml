<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module PUBLIC "-//Google Inc.//DTD Google Web Toolkit trunk//EN"
        "http://google-web-toolkit.googlecode.com/svn/trunk/distro-source/core/src/gwt-module.dtd">
<module rename-to="html">
    <inherits name='com.badlogic.gdx.backends.gdx_backends_gwt'/>
    <inherits name='com.artemis.backends.artemis_backends_gwt'/>
    <inherits name='com.artemis-json-libgdx'/>
    <inherits name='com.badlogic.gdx.backends.gdx_backends_gwt' />
    <inherits name='com.badlogic.gdx.physics.box2d.box2d-gwt' />
    <inherits name='com.kotcrab.vis.vis-ui' />
    <inherits name='postprocessing' />

    <!-- Why is this needed? -->
    <extend-configuration-property name="artemis.reflect.include" value="com.badlogic.gdx.physics.box2d.Body"/>
    <extend-configuration-property name="artemis.reflect.include" value="com.badlogic.gdx.physics.box2d.Fixture"/>
    <extend-configuration-property name="artemis.reflect.include" value="com.badlogic.gdx.utils.ShortArray"/>

    <extend-configuration-property name="artemis.reflect.include" value="com.mygdx.game.components"/>
	<extend-configuration-property name="artemis.reflect.include" value="com.mygdx.game.systems"/>

	<extend-configuration-property name="artemis.reflect.include" value="com.mygdx.game.hierarchy"/>
	<extend-configuration-property name="artemis.reflect.include" value="com.mygdx.game.scenegraph"/>
	<extend-configuration-property name="artemis.reflect.include" value="com.mygdx.game.box2d"/>
	<extend-configuration-property name="artemis.reflect.include" value="com.mygdx.game.shaperendering"/>

	<inherits name='MyGdxGame' />
	<entry-point class='com.mygdx.game.client.HtmlLauncher' />
	
	<set-configuration-property name="gdx.assetpath" value="../android/assets" />
</module>
